@model SoccerLeague.Models.Team

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Team</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TeamName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TeamName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PhotoLink)
        </dt>
        <dd class="col-sm-10">
            <img src="@Url.Content(Model.PhotoLink)" alt="" height="40" width="40">
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Coach)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Coach)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.League)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.League.Chairman)
        </dd>
        <dt class="col-sm-2">
            Points:
        </dt>
        <dd class="col-sm-10">
            <points-helper points-helper-value="Model.Players"></points-helper>
        </dd>
    </dl>
</div>
<div>
    <a type="button" class="btn btn-light" asp-action="Edit" asp-route-id="@Model.ID">Edit</a> |
    <a type="button" class="btn btn-light" asp-action="Index">Back to List</a>
</div>
