@model IEnumerable<SoccerLeague.Models.League>

@{
    ViewData["Title"] = "Leagues";
}

<h1>Leagues</h1>
@if (this.User.IsInRole("Admin"))
{
    <p>
        <a type="button" class=" btn btn-light" asp-action="Create">Create New</a>
    </p>
}
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.LeagueName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Chairman)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.LeagueName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Chairman)
                </td>
                <td>
                    <a type="button" class="btn btn-primary" asp-action="Details" asp-route-id="@item.ID">Details</a>
                    <a type="button" class="btn btn-primary" asp-action="Teams" asp-route-id="@item.ID">Teams</a>
                    @if (this.User.IsInRole("Admin"))
                    {
                        <a type="button" class="btn btn-primary" asp-action="Edit" asp-route-id="@item.ID">Edit</a>
                        <a type="button" class="btn btn-danger" asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                    }
                </td>
        </tr>
        }
</tbody>
</table>
