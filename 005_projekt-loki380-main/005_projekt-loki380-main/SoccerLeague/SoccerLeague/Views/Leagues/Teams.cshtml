@model SoccerLeague.Models.League

@{
    ViewData["Title"] = "Details";
}

<h1>Teams in @Html.DisplayFor(model => model.LeagueName)</h1>

<div>
    <hr />

</div>
<div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Name
                </th>
                <th>
                    Logo
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Teams)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.TeamName)
                    </td>
                    <td>
                        <img src="@Url.Content(item.PhotoLink)" alt="" height="40" width="40">
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a type="button" class="btn btn-light" asp-action="Index">Back to List</a>
</div>
